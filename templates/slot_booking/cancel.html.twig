<div class="container list-group-item list-group-item-action list-group-item-warning">
    <div class="row">
        <button type="button" class="col-4 btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancel_slot_{{ slot.id }}">
            {{ 'cancel'|trans }} {{ slotCost(slot) }}
        </button>
        <span class="col-8">{{ slot.text }}</span>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="cancel_slot_{{ slot.id }}" tabindex="-1" aria-labelledby="cancel_slot_{{ slot.id }}_label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="cancel_slot_{{ slot.id }}_label">{{ 'confirm_slot_cancel_title'|trans }}</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'close'|trans }}"></button>
            </div>
            <div class="modal-body">
                {{ 'confirm_slot_cancel'|trans({'text': slot.text}) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'no'|trans }}</button>
                <a role="button" class="btn btn-primary" href="{{ link }}">{{ 'yes'|trans }}</a>
            </div>
        </div>
    </div>
</div>
