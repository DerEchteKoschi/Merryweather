{% extends 'base.html.twig' %}

{% block title %}Distribution{% endblock %}

{% block body %}
    <h1>Distribution</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ distribution.id }}</td>
            </tr>
            <tr>
                <th>Active_from</th>
                <td>{{ distribution.activeFrom ? distribution.activeFrom|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active_till</th>
                <td>{{ distribution.activeTill ? distribution.activeTill|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ distribution.text }}</td>
            </tr>
            <tr>
                <th>Slots</th>
                <td>{{ distribution.slots|length }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_distribution_index') }}">back to list</a>

    <a href="{{ path('app_distribution_edit', {'id': distribution.id}) }}">edit</a>

    {{ include('admin/distribution/_delete_form.html.twig') }}
{% endblock %}
