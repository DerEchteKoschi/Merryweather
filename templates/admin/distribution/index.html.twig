{% extends 'base.html.twig' %}

{% block title %}Distribution index{% endblock %}

{% block body %}
    <h1>Distribution index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Active_from</th>
                <th>Active_till</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for distribution in distributions %}
            <tr>
                <td>{{ distribution.id }}</td>
                <td>{{ distribution.activeFrom ? distribution.activeFrom|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ distribution.activeTill ? distribution.activeTill|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ distribution.text }}</td>
                <td>
                    <a href="{{ path('app_distribution_show', {'id': distribution.id}) }}">show</a>
                    <a href="{{ path('app_distribution_edit', {'id': distribution.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_distribution_new') }}">Create new</a>
{% endblock %}
